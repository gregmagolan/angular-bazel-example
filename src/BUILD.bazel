load("@build_bazel_rules_nodejs//:defs.bzl", "rollup_bundle", "nodejs_binary")

rollup_bundle(
    name = "bundle",
    index_html_template = "index.template.html",
    entry_points = [
        "src/main",
        "src/foo/foo.module.ngfactory",
    ],
    deps = ["//src"],
)

nodejs_binary(
    name = "prodserver",
    args = ["src"],
    data = [
        ":bundle",
        ":zonejs",
    ],
    entry_point = "history-server/modules/cli.js",
)
